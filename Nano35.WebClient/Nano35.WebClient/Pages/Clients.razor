@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/clients"

<AuthorizeView>
    @if (_loading)
    {
        <div class="col-md-6 offset-md-3 mt-5">
            <div class="card">
                <h4 class="card-header">Загрузка</h4>
                <div class="card-body">
                    ...
                </div>
            </div>
        </div>
    }
    else
    {
        @if (!_serverAvailable)
        {
            <h4 class="card-header">Сервер недоступен</h4>
            <div class="card-body">
                Повторите попытку позднее
            </div>
        }
        else
        {
            <button class="btn btn-light"
                    style="width: 100%"
                    @onclick="ShowModalNewClient">
                Создать
            </button>
            <br/>
            <table class="table" style="font-size: 12px">
                <thead>
                <tr>
                    <th>Название</th>
                    <th>Адресс</th>
                    <th>Телефон</th>
                    <th>Salle</th>
                    <th>Тип Клиента</th>
                    <th>Статус Клиента</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in _data)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Salle</td>
                        <td>@item.ClientType</td>
                        <td>@item.ClientState</td>
                        <td><button type="button"
                                    class="btn btn-primary"
                                    @onclick="() => ShowModalEditClient(item.Id)">
                            Редактировать
                        </button></td>
                    </tr>
                }
                </tbody>
            </table>
            <ModalNewClient @ref="this.ModalNewClient"></ModalNewClient>
            <ModalEditClient @ref="this.ModalEditClient"></ModalEditClient>
        }
    }
</AuthorizeView>