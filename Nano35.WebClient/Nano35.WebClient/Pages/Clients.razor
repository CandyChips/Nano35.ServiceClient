@using Microsoft.AspNetCore.Authorization
@using Nano35.HttpContext.instance
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/clients"

<AuthorizeView>
    @if (_loading)
    {
        <div class="col-md-6 offset-md-3 mt-5">
            <div class="card">
                <h4 class="card-header">Загрузка</h4>
                <div class="card-body">
                    ...
                </div>
            </div>
        </div>
    }
    else
    {
        @if (!_serverAvailable)
        {
            <h4 class="card-header">Сервер недоступен</h4>
            <div class="card-body">
                Повторите попытку позднее
            </div>
        }
        else
        {
            <button class="btn btn-light"
                    style="width: 100%"
                    @onclick="ShowModalNewClient">
                Создать
            </button>
            <br/>
            <Grid Items="@_data" TItem="ClientViewModel">    
                <Header>  
                    <th>Название</th>
                    <th>Адресс</th>
                    <th>Телефон</th>
                    <th>Salle</th>
                    <th>Тип Клиента</th>
                    <th>Статус Клиента</th>
                </Header>  
                <Row Context="item">  
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Salle</td>
                    <td>@item.ClientType</td>
                    <td>@item.ClientState</td>
                </Row>  
            </Grid>
            @if (_isNewClientDisplay)
            {
                <ModalNewClient 
                    OnHideModalNewClient="HideModalNewClient"/>
            }
            @if (_isEditClientDisplay)
            {
            
                <ModalEditClient/>
            }
        }
    }
</AuthorizeView>