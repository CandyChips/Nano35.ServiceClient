@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@layout StorageLayout
@page "/instance/coming"

<AuthorizeView>
    @if (_loading)
    {
        <div class="col-md-6 offset-md-3 mt-5">
            <div class="card">
                <h4 class="card-header">Загрузка</h4>
                <div class="card-body">
                    ...
                </div>
            </div>
        </div>
    }
    else
    {
        <button class="btn btn-outline-primary"
                style="width: 100%"
                @onclick="ShowModalNewComing">
            Создать
        </button>
        <br/>
        <table class="table" style="font-size: 12px">
            <thead>
            <tr>
                <th>Номер оприходования</th>
                <th>Дата</th>
                <th>Подразделение</th>
                <th>Клиент</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in _data)
            {
                <tr>
                    <td>@item.Number</td>
                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                    <td>@item.Unit</td>
                    <td>@item.Client</td>
                    <td>@item.Cash</td>
                    <td><button type="button"
                                class="btn btn-primary">
                        Редактировать
                    </button></td>
                </tr>
            }
            </tbody>
        </table>
        @if (_isNewComingDisplay)
        {
            <ModalNewComing
                OnHideModalNewComing="HideModalNewComing"/>
        }
    }
</AuthorizeView>