@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@page "/instances"
<AuthorizeView>
    @if (_loading)
    {
        <div class="col-md-6 offset-md-3 mt-5">
            <div class="card">
                <h4 class="card-header">Загрузка</h4>
                <div class="card-body">
                    ...
                </div>
            </div>
        </div>
    }
    else
    {
        @if (!_serverAvailable)
        {
            <h4 class="card-header">Сервер недоступен</h4>
            <div class="card-body">
                Повторите попытку позднее
            </div>
        }
        else
        {
            <button class="btn btn-light"
                    style="width: 100%"
                    @onclick="ShowModalNewInstance">
                Создать
            </button>
            <br/>
            <table class="table" style="font-size: 12px">
                <thead>
                <tr>
                    <th>Название</th>
                    <th>Организации</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in _data)
                {
                    <tr>
                        <td>@item.OrgName</td>
                        <td>@item.OrgRealName</td>
                        <td><button class="btn btn-primary"
                                    @onclick="() => OpenOrg(item.Id)">
                            Войти
                        </button></td>
                    </tr>
                }
                </tbody>
            </table>

        }
    }
</AuthorizeView>
<ModalNewInstance @ref="this.ModalNewInstance"></ModalNewInstance>