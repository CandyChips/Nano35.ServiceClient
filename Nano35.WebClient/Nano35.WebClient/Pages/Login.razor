@page "/log-in"

<div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
        @if (_loading)
        {
            <h4 class="card-header">Загрузка</h4>
            <div class="card-body">
                ...
            </div>
        }
        else
        {
            @if (!_serverAvailable)
            {
            
                <h4 class="card-header">Сервер недоступен</h4>
                <div class="card-body">
                    Повторите попытку позднее
                </div>
            }
            else
            {
                <h4 class="card-header">Авторизация</h4>
                <div class="card-body">
                    <EditForm Model="@_model" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <div class="form-group">
                            <label>Номер телефона</label>
                            <InputText @bind-Value="_model.Login" class="form-control" />
                            <ValidationMessage For="@(() => _model.Login)" />
                        </div>
                        <div class="form-group">
                            <label>Пароль</label>
                            <InputText @bind-Value="_model.Password" type="password" class="form-control" />
                            <ValidationMessage For="@(() => _model.Password)" />
                        </div>
                        <button class="btn btn-primary">
                            @if (_loading)
                            {
                                <span class="spinner-border spinner-border-sm mr-1"></span>
                            }
                            Войти
                        </button>
                        @if (!string.IsNullOrEmpty(_error))
                        {
                            <div class="alert alert-danger mt-3 mb-0">@_error</div>
                        }
                    </EditForm>
                </div>
            }
        }
    </div>
</div>