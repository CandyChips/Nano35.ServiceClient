<div class="modal-background">
    <div class="modal-content card">
        <h4 class="card-header">Новое наименование</h4>
        <div class="card-body">
            @if (!_loading)
            {
                <EditForm Model="@_model" OnValidSubmit="HandleValidSubmit">
                    <SelectArticleCategory 
                        OnSelectedArticleCategoryChanged="CurrentArticleCategoryChanged"/>
                    <div class="form-group">
                        <label>Бренд</label>
                        <InputText @bind-Value="_model.Brand" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Модель</label>
                        <InputText @bind-Value="_model.Model" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Информация</label>
                        <InputText @bind-Value="_model.Info" class="form-control" />
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-primary">
                            Создать
                        </button>
                        <button class="btn btn-secondary"
                                @onclick="HideModalNewArticle">Закрыть
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>