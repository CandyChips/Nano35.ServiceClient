<style>
    .modal-background {
        display: block;
        position: fixed;
        z-index: 3;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
    }
    .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        border: 2px solid #888;
        width: 90%;
    }
</style>
<div class="modal-background">
    <div class="modal-content card">
        <h4 class="card-header">Новый товар</h4>
        <div class="card-body">
        @if (!_loading)
        {
            <EditForm Model="@_model" OnValidSubmit="Create">
                <DataAnnotationsValidator />
                <SelectArticle 
                    OnSelectedArticleChanged="OnSelectedArticleChanged"/>
                <SelectStorageItemCondition 
                    OnSelectedArticleCategoryChanged="OnSelectedStorageItemConditionChanged"/>
                <div class="form-group">
                    <label>Комментарий</label>
                    <InputText @bind-Value="_model.Comment" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Скрытый комментарий</label>
                    <InputText @bind-Value="_model.HiddenComment" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Цена в закупе</label>
                    <InputNumber @bind-Value="_model.PurchasePrice" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Цена продажи</label>
                    <InputNumber @bind-Value="_model.RetailPrice" class="form-control" />
                </div>
                <div class="btn-group">
                    <button class="btn btn-primary">
                        Создать
                    </button>
                    <button class="btn btn-secondary"
                            @onclick="HideModalNewStorageItem">Закрыть
                    </button>
                </div>
            </EditForm>
        }
        </div>
    </div>
</div>