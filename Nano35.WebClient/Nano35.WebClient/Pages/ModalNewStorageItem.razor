@if (this.Display)
{
    <style>
        .modal-background {
            display: block;
            position: fixed;
            z-index: 3;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
        }
        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            border: 2px solid #888;
            width: 90%;
        }
    </style>
    <div class="modal-background">
        <div class="modal-content card">
            <h4 class="card-header">Новый товар</h4>
            <div class="card-body">
            @if (!Loading)
            {
                <EditForm Model="@_model" OnValidSubmit="Create">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label>Наименование</label>
                        <SelectArticle></SelectArticle>
                    </div>
                    <div class="form-group">
                        <label>Состояние</label>
                        <InputSelect @bind-Value="_model.ConditionId" class="custom-select">
                            <option selected disabled>Choose...</option>
                            @foreach (var item in conditions)
                            {
                                <option value="@item.Id">@item.Name </option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => _model.ConditionId)"/>
                    </div>
                    <div class="form-group">
                        <label>Комментарий</label>
                        <InputText @bind-Value="_model.Comment" class="form-control" />
                        <ValidationMessage For="@(() => _model.Comment)" />
                    </div>
                    <div class="form-group">
                        <label>Скрытый комментарий</label>
                        <InputText @bind-Value="_model.HiddenComment" class="form-control" />
                        <ValidationMessage For="@(() => _model.HiddenComment)" />
                    </div>
                    <div class="form-group">
                        <label>Цена в закупе</label>
                        <InputNumber @bind-Value="_model.PurchasePrice" class="form-control" />
                        <ValidationMessage For="@(() => _model.PurchasePrice)" />
                    </div>
                    <div class="form-group">
                        <label>Цена продажи</label>
                        <InputNumber @bind-Value="_model.RetailPrice" class="form-control" />
                        <ValidationMessage For="@(() => _model.RetailPrice)" />
                    </div>
                    <div>
                        <button class="btn btn-primary">
                            Создать
                        </button>
                        <button class="btn btn-secondary"
                                @onclick="Hide">Закрыть
                        </button>
                    </div>
                </EditForm>
            }
            </div>
        </div>
    </div>
}