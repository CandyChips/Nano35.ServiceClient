@page "/Registration"

<div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
        @if (_loading)
        {
            <h4 class="card-header">Загрузка</h4>
            <div class="card-body">
                ...
            </div>
        }
        else
        {
            @if (_serverAvailable)
            {
                <h4 class="card-header">Авторизация</h4>
                <div class="card-body">
                    <EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <div class="form-group">
                            <label>Ф.И.О.</label>
                            <InputText @bind-Value="model.Name" class="form-control" />
                            <ValidationMessage For="@(() => model.Name)" />
                        </div>
                        <div class="form-group">
                            <label>Номер телефона</label>
                            <InputText @bind-Value="model.Phone" class="form-control" />
                            <ValidationMessage For="@(() => model.Phone)" />
                        </div>
                        <div class="form-group">
                            <label>Электронная почта</label>
                            <InputText @bind-Value="model.Email" class="form-control" />
                            <ValidationMessage For="@(() => model.Email)" />
                        </div>
                        <div class="form-group">
                            <label>Пароль</label>
                            <InputText @bind-Value="model.Password" class="form-control" />
                            <ValidationMessage For="@(() => model.Password)" />
                        </div>
                        <div class="form-group">
                            <label>Подтверждение пароля</label>
                            <InputText @bind-Value="model.PasswordConfirm" class="form-control" />
                            <ValidationMessage For="@(() => model.PasswordConfirm)" />
                        </div>
                        <button class="btn btn-primary">
                            @if (_loading)
                            {
                                <span class="spinner-border spinner-border-sm mr-1"></span>
                            }
                            Зарегитрироваться
                        </button>
                        @if (!string.IsNullOrEmpty(_error))
                        {
                            <div class="alert alert-danger mt-3 mb-0">@_error</div>
                        }
                    </EditForm>
                </div>
            }
            else
            {
                <h4 class="card-header">Сервер недоступен</h4>
                <div class="card-body">
                    Повторите попытку позднее
                </div>
            }
        }
    </div>
</div>