<div class="form-group">
    <label>Наименование</label>
    <div class="input-group">
        <InputSelect class="custom-select"
                     @bind-Value="SelectedArticlesId">
            @if (!_isLoading)
            {
                <option selected disabled>Выберите наименование</option>
                @foreach (var item in Articles)
                {
                    <option value="@item.Id">@item.Category @item.Model</option>
                }
            }
            else
            {
                <option selected disabled>Загрузка</option>
            }
        </InputSelect>
        <div class="input-group-append">
            <button class="btn btn-outline-primary" 
                    type="button"
                    @onclick="() => { _isNewArticleDisplay = true; }">Создать</button>
        </div>
    </div>
</div>

<Modal Title="Новое наименование" 
       IsDisplay="@_isNewArticleDisplay">
    <Form>
        <CreateArticleForm/>
    </Form>
</Modal>
