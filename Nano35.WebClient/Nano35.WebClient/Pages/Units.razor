@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/units"

<AuthorizeView>
    @if (_loading)
    {
        <div class="col-md-6 offset-md-3 mt-5">
            <div class="card">
                <h4 class="card-header">Загрузка</h4>
                <div class="card-body">
                    ...
                </div>
            </div>
        </div>
    }
    else
    {
        @if (!_serverAvailable)
        {
            <h4 class="card-header">Сервер недоступен</h4>
            <div class="card-body">
                Повторите попытку позднее
            </div>
        }
        else
        {
            <button class="btn btn-light"
                    style="width: 100%"
                    @onclick="ShowModalNewUnit">
                Создать
            </button>
            <br/>
            <table class="table" style="font-size: 12px">
                <thead>
                <tr>
                    <th>Название</th>
                    <th>Адресс</th>
                    <th>Телефон</th>
                    <th>Формат работы</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in _data)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Adress</td>
                        <td>@item.Phone</td>
                        <td>@item.WorkingFormat</td>
                        <td><button type="button" class="btn btn-primary">Редактировать</button></td>
                    </tr>
                }
                </tbody>
            </table>
            @if (_isNewUnitDisplay)
            {
                <ModalNewUnit 
                    OnHideModalNewUnit ="HideModalNewUnit"/>
            }
        }
    }
</AuthorizeView>