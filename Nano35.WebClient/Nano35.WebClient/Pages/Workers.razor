@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@layout InstanceLayout
@page "/instance/workers"

<AuthorizeView>
    @if (_loading)
    {
        <div class="col-md-6 offset-md-3 mt-5">
            <div class="card">
                <h4 class="card-header">Загрузка</h4>
                <div class="card-body">
                    ...
                </div>
            </div>
        </div>
    }
    else
    {
        <button class="btn btn-light"
                    style="width: 100%"
                    @onclick="ShowModalNewWorker">
                Создать
            </button>
            <br/>
        <table class="table" style="font-size: 12px">
            <thead>
            <tr>
                <th>ФИО</th>
                <th>Почта</th>
                <th>Телефон</th>
                <th>Должность</th>
                <th>Комментарий</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in _data)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Role</td>
                    <td>@item.Comment</td>
                    <td><button type="button" class="btn btn-primary">Редактировать</button></td>
                </tr>
            }
            </tbody>
        </table>
    }
</AuthorizeView>

<ModalNewWorker @ref="this.ModalNewWorker"></ModalNewWorker>