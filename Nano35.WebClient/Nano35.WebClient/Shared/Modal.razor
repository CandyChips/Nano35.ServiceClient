<style type="text/css">
    .modal-background {
        display: block;
        position: fixed;
        z-index: 3;
        left: 0;
        top: 0;
        width: 100%;
        height: 100vh;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
    }
    
    .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        border: 2px solid #888;
        width: 50%; 
    }
</style>
@if (IsDisplay)
{
    <div>
        <div class="modal-background" >
            <div class="modal-content card">
                <h4 class="card-header" style="display: flex;">
                    @Title
                    <span style="flex: 1 1 auto;"></span>
                    <button class="btn btn-secondary btn-sm"
                            @onclick="() => { IsDisplay = false; }">
                        Закрыть
                    </button>
                </h4>
                <div class="card-body">
                    @Form
                </div>
            </div>
        </div>
    </div>
}

@functions {  
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment Form { get; set; }
    [Parameter] public bool IsDisplay { get; set; }
}  